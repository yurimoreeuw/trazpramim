<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/productsearchitemimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/image_1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/productsearchitemimage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_search_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Queijo patio de pedra"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_search_star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vendor_star_hollow"
                android:background="#00FFFFFF" />
            <ImageView
                android:id="@+id/product_search_star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vendor_star_hollow"
                android:background="#00FFFFFF" />
            <ImageView
                android:id="@+id/product_search_star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vendor_star_hollow"
                android:background="#00FFFFFF"/>
            <ImageView
                android:id="@+id/product_search_star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vendor_star_hollow"
                android:background="#00FFFFFF" />
            <ImageView
                android:id="@+id/product_search_star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vendor_star_hollow"
                android:background="#00FFFFFF" />

        </LinearLayout>

        <TextView
            android:id="@+id/product_search_item_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="poÃ§os de caldas, mg"/>
        <TextView
            android:id="@+id/product_search_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="R$ 54,00"/>

        <TextView
            android:id="@+id/product_search_item_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Entrega prevista para dia 03"/>

        <TextView
            android:id="@+id/product_search_item_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Vendendor: Wendisneison"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>